# StarMeet Environment Configuration
# Copy to .env and fill in the values

# ========================================
# CORE SECRETS (GENERATE NEW FOR PRODUCTION!)
# ========================================

# PostgreSQL password (use: openssl rand -base64 24)
POSTGRES_PASSWORD=your_secure_password_here

# JWT Secret for Supabase Auth (use: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Supabase Anonymous Key (public, safe to expose)
ANON_KEY=your_anon_key_here

# Supabase Service Role Key (KEEP SECRET!)
SERVICE_ROLE_KEY=your_service_role_key_here

# ========================================
# SITE CONFIGURATION
# ========================================

# Production URL (no trailing slash)
SITE_URL=https://star-meet.com

# ========================================
# EMAIL (Optional - for auth emails)
# ========================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# ========================================
# DEVELOPMENT OVERRIDES
# ========================================

# Set to true for local development
# DEBUG=true

# ========================================
# LLM INTEGRATION (MiniMax M2)
# ========================================

# MiniMax API Key for personality report generation
# Get from https://platform.minimax.io/
MINIMAX_API_KEY=your_minimax_api_key_here
