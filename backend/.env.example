# Backend Environment Variables

# Application
APP_NAME=Astro-VC Backend
APP_VERSION=0.1.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/astrovc
DB_ECHO=False

# Redis (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=86400  # 24 hours in seconds

# OpenSearch
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=False

# VedAstro API
VEDASTRO_API_KEY=your_vedastro_api_key_here
VEDASTRO_API_URL=https://api.vedastro.org

# LLM Settings
LLM_MODEL_PATH=/models/AstroSage-8B-Q8_0.gguf
LLM_N_CTX=2048
LLM_N_GPU_LAYERS=-1
LLM_N_THREADS=8
LLM_TEMPERATURE=0.7

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# AI Verification (Human-in-the-Loop)
ENABLE_HUMAN_VERIFICATION=True
VERIFICATION_REQUIRED_FOR_SCORE_BELOW=7

# External APIs (optional)
HUGGINGFACE_API_KEY=your_hf_api_key_here
